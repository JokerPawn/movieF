#hotShow {
  width: 100%;
  background-color: #f5f5f5;
}
#hotShow .searchBox {
  height: 80rpx;
  width: 100%;
  background-color: #EEE;
  padding: 10rpx;
}
#hotShow .searchBox .searchBox_inner {
  width: 100%;
  height: 100%;
  text-align: center;
  position: relative;
  background-color: #fff;
}
#hotShow .searchBox .searchBox_inner .searchIcon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 20rpx;
  top: 10rpx;
}
#hotShow .searchBox .searchBox_inner .search {
  width: 100%;
  align-items: center;
  height: 60rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
}
#hotShow .swipe {
  width: 100%;
  height: 8rem;
}
#hotShow .swipe .recLink {
  display: block;
  width: 100%;
  height: 100%;
}
#hotShow .swipe .recLink .recImg {
  width: 100%;
  height: 100%;
}
